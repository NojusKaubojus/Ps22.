<Window x:Class="NojusPS22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NojusPS22 App" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="FilePathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="300"/>
        <Button Content="Browse File" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,10,0,0" Width="100" Click="BrowseButton_Click"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="120"/>
        <Button Content="Encrypt File" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,40,0,0" Width="120" Click="EncryptButton_Click"/>
        <Button Content="Decrypt File" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,40,0,0" Width="120" Click="DecryptButton_Click"/>
    </Grid>
</Window>
